{
  "name": "link-music",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "develop:backend": "ENV_PATH=../.env.local yarn --cwd backend develop",
    "develop:frontend": "ENV_PATH=../.env.local wait-on http://localhost:1337/admin && yarn --cwd frontend develop",
    "develop": "cross-env FORCE_COLOR=1 npm-run-all -l -p develop:*",
    "build:backend": "ENV_PATH=../.env yarn --cwd backend build",
    "build:frontend": "ENV_PATH=../.env yarn --cwd frontend build",
    "build": "cross-env FORCE_COLOR=1 yarn workspaces run build",
    "start:backend": "ENV_PATH=../.env yarn --cwd backend start",
    "start:frontend": "ENV_PATH=../.env yarn --cwd frontend start",
    "start": "cross-env FORCE_COLOR=1 yarn workspaces run start"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "eslint-config-next": "^13.3.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@types/sharp": "^0.31.1",
    "sharp": "^0.32.0"
  }
}
