{
  "kind": "collectionType",
  "collectionName": "releases",
  "info": {
    "name": "release",
    "description": "",
    "singularName": "release",
    "pluralName": "releases",
    "displayName": "Release"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "single",
        "album"
      ],
      "default": "single",
      "required": true
    },
    "artistName": {
      "type": "string"
    },
    "date": {
      "type": "date"
    },
    "img": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "releases"
    },
    "link": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 3
    },
    "platformLinks": {
      "type": "json"
    },
    "vkPixel": {
      "type": "string"
    },
    "facebookPixel": {
      "type": "string"
    },
    "video": {
      "type": "string"
    },
    "order": {
      "type": "integer",
      "default": 0,
      "required": true
    }
  }
}
